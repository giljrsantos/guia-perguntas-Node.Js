<%- include ('partials/header.ejs') %>

<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label for="">Resposta:</label>

            <textarea name="corpo" class="form-control" placeholder="Digite a sua resposta"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <br>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>

        <% respostas.forEach(resposta => {%>
            <br>
            <div class="card">
                <div class="card-body">
                       <h6><%= resposta.createdAt%></h6>
                    <p><%= resposta.corpo %></p><br>
                </div>
            </div>
        <% }) %>


    </div>

</body>
<%- include ('partials/footer.ejs') %>